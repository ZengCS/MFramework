<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/config_item_layout"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="@drawable/config_center_item" >

        <TextView
            android:id="@+id/cfg_item_name"
            style="@style/config_item_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@drawable/preferences"
            android:drawablePadding="10dip"
            android:singleLine="true"
            android:text="设置名称" />

        <TextView
            android:id="@+id/cfg_item_value"
            style="@style/config_item_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawablePadding="14dip"
            android:drawableRight="@drawable/config_arrow"
            android:singleLine="true"
            android:text="当前值" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#CACACA"
        android:contentDescription="@null" />

</LinearLayout>