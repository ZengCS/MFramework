<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/disableSplitMotion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ConfigActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dip" >

        <LinearLayout
            style="@style/disableSplitMotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dip" >

            <!-- 系统设置-1 -->

            <LinearLayout
                android:id="@+id/config_layout_1"
                style="@style/disableSplitMotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/config_item_parent"
                android:orientation="vertical"
                android:padding="2dip" >
            </LinearLayout>

            <!-- 系统设置-2 -->

            <LinearLayout
                android:id="@+id/config_layout_2"
                style="@style/disableSplitMotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@drawable/config_item_parent"
                android:orientation="vertical"
                android:padding="2dip" >
            </LinearLayout>

            <!-- 系统设置-3 -->

            <LinearLayout
                android:id="@+id/config_layout_3"
                style="@style/disableSplitMotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@drawable/config_item_parent"
                android:orientation="vertical"
                android:padding="2dip" >
            </LinearLayout>

            <!-- 清除记录并退出按钮 -->

            <Button
                android:id="@+id/btn_cfg_clear_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:background="@drawable/btn_red_orange"
                android:padding="8dip"
                android:text="@string/clear_and_exit"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/shade_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_alpha_66"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <!-- 从下往上滑的选择面板 -->

    <RelativeLayout
        android:id="@+id/config_slide_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:visibility="gone" >

        <LinearLayout
            style="@style/disableSplitMotion"
            android:layout_width="match_parent"
            android:layout_height="400dip"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                style="@style/slide_config_row"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:clickable="false"
                android:text="底部弹出式对话面板"
                android:textColor="@color/new_blue" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/new_blue" />

            <TextView
                style="@style/slide_config_row"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:text="选项-1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/lightgray" />

            <TextView
                style="@style/slide_config_row"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:text="选项-2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/lightgray" />

            <TextView
                style="@style/slide_config_row"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:text="选项-3" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/lightgray" />

            <TextView
                style="@style/slide_config_row"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:text="选项-4" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@color/lightgray" />

            <TextView
                style="@style/slide_config_row"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textColor="#FF6000" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>