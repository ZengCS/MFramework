<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomWindowTitleBackground">

        <!-- <item name="android:background">@color/theme_blue</item> -->
        <item name="android:background">@drawable/skin_header_bar_bg</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="custom_style" parent="android:Theme">
        <item name="android:windowTitleSize">@dimen/title_bar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <!-- 自定义dialog -->
    <style name="custom_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- 禁用多点触控 -->
    <style name="disableSplitMotion">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>
</resources>